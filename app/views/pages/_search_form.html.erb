<%= form_with url: clinics_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control my-3 box-glow white-bg",
    placeholder: "How're you feeling today?",
    required: true
  %>
  <%= button_tag type: 'submit', class: "btn btn-primary w-100 mb-3 box-glow" do %>
    Search nearby clinics
  <% end %>
<% end %>
