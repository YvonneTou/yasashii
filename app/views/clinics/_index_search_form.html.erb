<%= form_with url: clinics_path, class: "d-flex mt-3" , method: :get do %>

  <%= text_field_tag :query,
    params[:query],
    class: "form-control m-1",
    placeholder: "Location",
    required: true
  %>
  <%= button_tag type: 'submit', class: "btn btn-primary m-1" do %>
    <i class="fas fa-search"></i>
  <% end %>
<% end %>
