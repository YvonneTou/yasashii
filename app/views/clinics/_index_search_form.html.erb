<%= form_with url: clinics_path, class: "d-flex mt-3" , method: :get do %>
  <div data-controller="symptom">
    <div data-symptom-target="outer" data-action="click->symptom#close">
      <%= text_field_tag :query,
        params[:query],
        class: "form-control m-1",
        placeholder: "Location"
        required: true
      %>
      <%= button_tag type: 'submit', class: "btn btn-primary m-1" do %>
        <i class="fas fa-search"></i>
      <% end %>
    </div>
    <button class="btn btn-primary"
            data-symptom-target="button"
            data-action="click->symptom#dropdown">
      +
    </button>
    <div class="d-none my-2" id="symptom_select" data-symptom-target="list">
      <% @symptoms.each do |symptom| %>
        <div>
          <%= check_box_tag symptom.symptom_en %>
          <%= label_tag(symptom, symptom.symptom_en) %>
        </div>
      <% end %>
    </div>
  </div>
  <%# <%= text_field_tag :query,
    params[:query],
    class: "form-control m-1",
    placeholder: "Symptoms"
  %>
<% end %>
