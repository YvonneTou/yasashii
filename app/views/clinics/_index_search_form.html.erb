<div data-controller="symptom">
  <%= form_with url: clinics_path, class: "mt-3" , method: :get do %>
    <div class="index-search">
    <div class="d-flex" data-symptom-target="outer" data-action="click->symptom#close">
      <%= text_field_tag :query,
        params[:query],
        class: "form-control m-1",
        placeholder: "Location",
        required: true
      %>
      <%= button_tag type: 'submit', class: "btn btn-primary m-1" do %>
        <i class="fas fa-search"></i>
      <% end %>
    </div>
    </div>
    <button class="btn btn-primary"
            id="symptom-button"
            data-symptom-target="button"
            data-action="click->symptom#dropdown">
      Search by symptom
    </button>
    <div class="d-none my-2" id="symptom_select" data-symptom-target="list">
      <% @symptoms.each do |symptom| %>
        <div>
          <%= check_box_tag "symptoms[#{symptom.symptom_en}]" %>
          <%= label_tag(symptom, symptom.symptom_en) %>
        </div>
      <% end %>
      <%= button_tag type: 'submit', class: "btn btn-primary m-1" do %>
        <i class="fas fa-search"></i>
      <% end %>
    </div>
  <% end %>
</div>
