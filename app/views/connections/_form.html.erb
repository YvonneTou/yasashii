<%= simple_form_for [@connection] do |f| %>
  <%= f.input :appt_date, label: 'Proposed Appointment Date Time', as: :datetime, html5: true %>
  <%= f.input :symptoms, as: :radio_buttons, label: 'Symptoms', collection: ['Headache', 'Fever', 'Muscle pain', 'Stiff neck', 'Stomachache']  %>
  <%= f.input :info, placeholder: 'Other information', label: false, as: :text %>
  <%= f.hidden_field :clinic_id, value: @clinic.id %>
  <%= f.button :submit, 'Submit & start call', class: "btn btn-success" %>
<% end %>
